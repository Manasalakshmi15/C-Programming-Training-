Linear Search

Program:
#include<stdio.h>
int main ()
{
    int size,num;
    printf("Enter the size of array:");
    scanf("%d",&size);
    int rand_arr[size];

    for (int i=0; i<size; i++)
    {
        rand_arr[i]=rand()%100;

    }
    for (int i=0; i<size; i++)
    {
        printf("\nrand_arr[%d] = %d\t\n",i,rand_arr[i]);
    }
    printf("Enter the number to be searched:");
    scanf("%d",&num);
    int count=0;
    for (int i=0; i<size; i++)
    {
        if (rand_arr[i]==num)
        {
            printf("\nThe number is present at %d",i);
            count++;
            break;
        }
    }
    if(count==0)
    {
        printf("The number is not in the generated array");
    }
    return 0;
}

